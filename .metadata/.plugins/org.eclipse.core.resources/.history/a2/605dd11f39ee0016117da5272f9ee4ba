#ifndef BINARYTREE_H_
#define BINARYTREE_H_

#include <string>
#include <iostream>
#include <stdexcept>
#include <iterator>

class BinaryTree{

public:
	BinaryTree(std::string& s, int weight);

	BinaryTree(BinaryTree& left, BinaryTree& right);

	std::string printTree(std::ostream& output);

	void get(vector<string>::iterator  iter, std::iterator end);

private:
	std::string text_;
	int weight_;
	BinaryTree& left_;
	BinaryTree& right_;


};



#endif /* BINARYTREE_H_ */
